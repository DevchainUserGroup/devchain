#GethDockerfile
FROM ethereum/client-go:release-1.6
LABEL name=geth

# This is to allow runit stop gracefully
STOPSIGNAL HUP

# configure container
RUN apk add --update bash emacs-nox heimdal-telnet shadow runit \
	nodejs git openssl  # for intelligence api
# Add services runit scripts
COPY sv /etc/service

RUN useradd -m eth
USER eth
WORKDIR /home/eth
RUN mkdir -p log/geth log/ethnetintel
COPY ./geth*json ./*.sh /home/eth/
RUN bash ./init.sh


USER root
EXPOSE 10000 10001 10002
ENTRYPOINT [ "/sbin/runsvdir" "/etc/sv" ]
